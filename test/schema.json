{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "allOf": [
    {
      "properties": {
        "id": {
          "type": "string",
          "rules": [
            "trim"
          ]
        },
        "email": {
          "type": "string",
          "format": "email"
        }
      },
      "additionalProperties": true
    },
    {
      "properties": {
        "name": {
          "type": "string"
        }
      },
      "additionalProperties": true
    }
  ]
}
